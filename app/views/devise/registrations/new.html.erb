<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :first_name, "First Name " %><br />
    <%= f.text_field :first_name, :placeholder => "Jason" , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_name, "Last Name " %><br />
    <%= f.text_field :last_name, :placeholder => "Vorhees" , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :age %><br />
    <%= f.number_field :age, :placeholder => "??" , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :street, "Street Name" %><br />
    <%= f.text_field :street, :placeholder => "2721 Bird Ave", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :city, "City" %><br />
    <%= f.text_field :city, :placeholder => "Miami", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :state, "State" %><br />
    <%= f.text_field :state, :placeholder => "FL", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email,:placeholder => "JasonV@gmail.com" , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password,:placeholder => "**********" , autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation,:placeholder => "**********" , autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :avatar, "Image Upload: " %>
    <%= f.file_field :avatar %><br>
  </div>




  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
